{
  "name": "companyai",
  "version": "1.0.0",
  "description": "CompanyAI - React Frontend mit Express Backend",
  "private": true,
  "workspaces": ["frontend", "backend"],
  "scripts": {
    "dev": "concurrently \"npm run -w backend dev\" \"npm run -w frontend dev\"",
    "dev:frontend": "npm run -w frontend dev",
    "dev:backend": "npm run -w backend dev",
    "install:all": "npm install",
    "install:frontend": "npm install -w frontend", 
    "install:backend": "npm install -w backend",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "npm run -w backend build",
    "build:frontend": "npm run -w frontend build",
    "lint": "npm run -w frontend lint",
    "test": "echo \"Tests werden bald hinzugefÃ¼gt\" && exit 0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
